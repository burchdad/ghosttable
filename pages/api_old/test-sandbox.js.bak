// API endpoint for test sandbox API (demo)
let sandboxes = [];

export default function handler(req, res) {
  if (req.method === 'POST') {
    const { sandboxId, config } = req.body;
    if (!sandboxId || !config) return res.status(400).json({ error: 'Missing fields' });
    sandboxes.push({ sandboxId, config, ts: Date.now() });
    return res.status(200).json({ success: true });
  }
  if (req.method === 'GET') {
    return res.status(200).json(sandboxes);
  }
  res.status(405).end();
}
