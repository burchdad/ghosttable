// API endpoint for real-time status dashboard (demo)
let statuses = [];

export default function handler(req, res) {
  if (req.method === 'POST') {
    const { service, status } = req.body;
    if (!service || !status) return res.status(400).json({ error: 'Missing fields' });
    statuses.push({ service, status, ts: Date.now() });
    return res.status(200).json({ success: true });
  }
  if (req.method === 'GET') {
    return res.status(200).json(statuses);
  }
  res.status(405).end();
}
