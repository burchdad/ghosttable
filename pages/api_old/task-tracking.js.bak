// API endpoint for task assignment and tracking (demo)
let tasks = [];

export default function handler(req, res) {
  if (req.method === 'POST') {
    const { taskId, assignedTo, status } = req.body;
    if (!taskId || !assignedTo || !status) return res.status(400).json({ error: 'Missing fields' });
    tasks.push({ taskId, assignedTo, status, ts: Date.now() });
    return res.status(200).json({ success: true });
  }
  if (req.method === 'GET') {
    return res.status(200).json(tasks);
  }
  res.status(405).end();
}
