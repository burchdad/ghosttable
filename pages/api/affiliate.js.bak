// API endpoint for affiliate/referral tracking (demo)
import Sentry from '../../lib/sentry';
let affiliates = [];

export default function handler(req, res) {
  try {
    if (req.method === 'POST') {
      const { userId, code, referred } = req.body;
      if (!userId || !code || !referred) {
        return res.status(400).json({ error: 'Missing fields', code: 400 });
      }
      affiliates.push({ userId, code, referred, ts: Date.now() });
      return res.status(200).json({ success: true });
    }
    if (req.method === 'GET') {
      return res.status(200).json(affiliates);
    }
    return res.status(405).json({ error: 'Method Not Allowed', code: 405 });
  } catch (err) {
    console.error('Affiliate API Error:', err);
    return res.status(500).json({ error: 'Internal Server Error', code: 500 });
  }
}
