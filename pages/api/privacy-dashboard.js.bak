// API endpoint for privacy dashboard for users (demo)
let privacy = [];

export default function handler(req, res) {
  if (req.method === 'POST') {
    const { userId, settings } = req.body;
    if (!userId || !settings) return res.status(400).json({ error: 'Missing fields' });
    privacy.push({ userId, settings, ts: Date.now() });
    return res.status(200).json({ success: true });
  }
  if (req.method === 'GET') {
    return res.status(200).json(privacy);
  }
  res.status(405).end();
}
