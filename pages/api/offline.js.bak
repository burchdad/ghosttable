// API endpoint for offline mode/data sync (demo)
let offline = [];

export default function handler(req, res) {
  if (req.method === 'POST') {
    const { userId, data } = req.body;
    if (!userId || !data) return res.status(400).json({ error: 'Missing fields' });
    offline.push({ userId, data, ts: Date.now() });
    return res.status(200).json({ success: true });
  }
  if (req.method === 'GET') {
    return res.status(200).json(offline);
  }
  res.status(405).end();
}
