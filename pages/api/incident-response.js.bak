// API endpoint for security incident response (demo)
let incidents = [];

export default function handler(req, res) {
  try {
    if (req.method === 'POST') {
      const { incidentId, details } = req.body;
      if (!incidentId || !details) {
        return res.status(400).json({ error: 'Missing fields', code: 400 });
      }
      incidents.push({ incidentId, details, ts: Date.now() });
      return res.status(200).json({ success: true });
    }
    if (req.method === 'GET') {
      return res.status(200).json(incidents);
    }
    return res.status(405).json({ error: 'Method Not Allowed', code: 405 });
  } catch (err) {
    console.error('Incident Response API Error:', err);
    return res.status(500).json({ error: 'Internal Server Error', code: 500 });
  }
}
