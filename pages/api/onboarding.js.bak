// API endpoint for custom onboarding flows (demo)
let onboardings = [];

export default function handler(req, res) {
  if (req.method === 'POST') {
    const { userId, flow } = req.body;
    if (!userId || !flow) return res.status(400).json({ error: 'Missing fields' });
    onboardings.push({ userId, flow, ts: Date.now() });
    return res.status(200).json({ success: true });
  }
  if (req.method === 'GET') {
    return res.status(200).json(onboardings);
  }
  res.status(405).end();
}
