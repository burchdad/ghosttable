// API endpoint for natural language query (demo)
let queries = [];

export default function handler(req, res) {
  try {
    if (req.method === 'POST') {
      const { query, tableId } = req.body;
      if (!query || !tableId) {
        return res.status(400).json({ error: 'Missing fields', code: 400 });
      }
      // Simulate NL query
      const result = { result: `Simulated result for: ${query}`, tableId, ts: Date.now() };
      queries.push(result);
      return res.status(200).json(result);
    }
    if (req.method === 'GET') {
      return res.status(200).json(queries);
    }
    return res.status(405).json({ error: 'Method Not Allowed', code: 405 });
  } catch (err) {
    console.error('NL Query API Error:', err);
    return res.status(500).json({ error: 'Internal Server Error', code: 500 });
  }
}
