// API endpoint for SSO/SAML integration (demo)
let ssoSessions = [];

export default function handler(req, res) {
  if (req.method === 'POST') {
    const { userId, provider, token } = req.body;
    if (!userId || !provider || !token) return res.status(400).json({ error: 'Missing fields' });
    ssoSessions.push({ userId, provider, token, ts: Date.now() });
    return res.status(200).json({ success: true });
  }
  if (req.method === 'GET') {
    return res.status(200).json(ssoSessions);
  }
  res.status(405).end();
}
