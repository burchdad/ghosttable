import Sentry from '../../lib/sentry';

// API endpoint for real-time collaboration (demo)
let sessions = [];

export default function handler(req, res) {
  try {
    if (req.method === 'POST') {
      const { sessionId, userId, action } = req.body;
      if (!sessionId || !userId || !action) {
        return res.status(400).json({ error: 'Missing fields', code: 400 });
      }
      sessions.push({ sessionId, userId, action, ts: Date.now() });
      return res.status(200).json({ success: true });
    }
    if (req.method === 'GET') {
      return res.status(200).json(sessions);
    }
    return res.status(405).json({ error: 'Method Not Allowed', code: 405 });
  } catch (err) {
    console.error('Collaboration API Error:', err);
    Sentry.captureException(err); // Capture the error with Sentry
    return res.status(500).json({ error: 'Internal Server Error', code: 500 });
  }
}
